package cauculos;

public class media {

	public static void main(String[] args) {
		int mes_1 = 40;
		int mes_2 = 30;
		int mes_3 = 70;
		
		float soma = mes_1 + mes_2 + mes_3;
		
		float media = soma / 3;
		float sobra= soma % 3;
				
		System.out.println("A média será: " + media);
		System.out.println("A sobra da média será: " + sobra);
	}
}
}
